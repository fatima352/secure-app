# --- √âtape 1 : Build Angular ---
FROM node:22-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci && echo "üëç D√©pendances install√©es"
COPY . .
RUN npm run build --omit=dev && echo "üëç Build Angular termin√© avec succ√®s"

# --- √âtape 2 : Serveur Nginx ---
FROM nginx:1.29.2-alpine
WORKDIR /usr/share/nginx/html 

# Copie du build Angular
# il faut copier les fichiers de prod (v√©rifier le bon r√©pertoire dans dit qui
# doit contenir le index.html et le reste)
#COPY --from=build /app/dist/ /usr/share/nginx/html #ancienne version de Angular
COPY --from=build /app/dist/frontend/browser/ /usr/share/nginx/html/ 
# Copie du fichier de configuration nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 443

# Cr√©ation du r√©pertoire pour les certificats SSL
RUN mkdir -p /etc/nginx/certs

# Script de d√©marrage personnalis√©
COPY <<EOF /docker-entrypoint.d/40-show-message.sh
#!/bin/sh
echo "üëç Frontend d√©marr√© sur https://localhost:8080"
EOF

RUN chmod +x /docker-entrypoint.d/40-show-message.sh
CMD ["nginx", "-g", "daemon off;"]